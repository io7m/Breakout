<?xml version="1.0" encoding="UTF-8" ?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.librarysimplified.breakout.app">

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
    android:name="org.librarysimplified.breakout.app.BreakoutApplication"
    android:allowBackup="true"
    android:icon="@drawable/pudding"
    android:contentDescription="Pudding Destroyer">

    <!-- Main entry point for the application. -->
    <activity
      android:name="org.librarysimplified.breakout.app.BreakoutActivity"
      android:contentDescription="Breakout"
      android:screenOrientation="portrait"
      android:exported="true"
      android:label="Pudding Destroyer">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>
